
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Card {
  id          String    @id @default(uuid())
  title       String
  imageUrl    String?
  lastViewed  DateTime?
  order       Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  urls        Url[]
}

model Url {
  id          String    @id @default(uuid())
  value       String
  cardId      String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  card        Card      @relation(fields: [cardId], references: [id], onDelete: Cascade)
}
